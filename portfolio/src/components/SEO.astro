---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Full-Stack Engineer & Systems Explorer. Building high-performance applications at the Edge.",
  image = "/og-default.png"
} = Astro.props;

const siteBase = "https://collinsmwangi.me";
const siteURL = new URL(Astro.url.pathname, siteBase).toString();
const socialImageURL = new URL(image, siteBase).toString();

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Collins Mwangi",
  "jobTitle": "Full-Stack Engineer",
  "url": siteBase,
  "sameAs": [
    "https://github.com/ny-collins",
    "https://x.com/CollinsMwa206"
  ],
  "knowsAbout": [
    "JavaScript",
    "TypeScript",
    "React",
    "Node.js",
    "Astro",
    "Edge Computing",
    "Full-Stack Development",
    "Systems Programming"
  ],
  "alumniOf": {
    "@type": "CollegeOrUniversity",
    "name": "University of Nairobi"
  },
  "description": description
};
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<link rel="canonical" href={siteURL} />

<title>{title} | Collins Mwangi</title>
<meta name="title" content={`${title} | Collins Mwangi`} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={siteURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={siteURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<link rel="sitemap" href="/sitemap-index.xml" />

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
