---
// src/layouts/TerminalLayout.astro
import '@fontsource/jetbrains-mono';
import '../styles/global.css';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <SEO title={title} />
  </head>
  <body class="bg-zinc-950 text-zinc-300 font-sans antialiased selection:bg-emerald-900 selection:text-white">
    <header class="border-b border-zinc-800 bg-zinc-900/50 backdrop-blur-md sticky top-0 z-50">
      <div class="max-w-5xl mx-auto px-4 h-10 flex justify-between items-center text-[10px] font-mono tracking-widest text-zinc-400">
        <div class="flex items-center gap-4">
          <span class="text-emerald-500 font-bold">● ONLINE</span>
          <span class="hidden sm:inline">COLLINS_MWANGI::SYSTEM</span>
        </div>
        <div class="flex gap-4">
          <span id="loc-display" class="hover:text-emerald-400 transition-colors cursor-default">LOC: --</span>
          <span class="hover:text-blue-400 transition-colors cursor-default">LATENCY: <span id="ping">--</span>ms</span>
        </div>
      </div>
    </header>

    <main class="min-h-screen max-w-5xl mx-auto px-4 py-12 md:py-20">
      <slot />
    </main>

    <footer class="border-t border-zinc-800 mt-20 py-8 text-center text-xs text-zinc-400 font-mono">
      <p>ENGINEERED ON CLOUDFLARE EDGE</p>
      <p class="mt-2 text-zinc-400">© {new Date().getFullYear()} Collins Mwangi. MIT License.</p>
    </footer>

  </body>
</html>

<script>
  const start = performance.now();

  async function fetchSystemData() {
    try {
      const response = await fetch('https://www.cloudflare.com/cdn-cgi/trace');
      const data = await response.text();

      const lines = data.split('\n');
      const locLine = lines.find(line => line.startsWith('loc='));

      if (locLine) {
        const loc = locLine.split('=')[1];
        const el = document.getElementById('loc-display');
        if (el) el.innerText = `LOC: ${loc}`;
      }
    } catch (e) {
      console.log('System trace failed');
    }
  }

  window.onload = () => {
    const end = performance.now();
    const ping = Math.round(end - start);
    const el = document.getElementById('ping');
    if(el) el.innerText = ping.toString();

    fetchSystemData();
  };
</script>
