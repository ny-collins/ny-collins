---
import TerminalLayout from '../layouts/TerminalLayout.astro';
---

<TerminalLayout title="404 Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <div class="mb-8">
      <div class="font-mono text-8xl font-bold text-white mb-4">404</div>
      <div class="inline-block px-4 py-2 bg-red-500/10 border border-red-500/30 rounded-lg mb-6">
        <span class="font-mono text-red-400 text-sm">ERROR: RESOURCE NOT FOUND</span>
      </div>
    </div>

    <h1 class="text-3xl font-bold text-white mb-4">
      Page Does Not Exist
    </h1>
    
    <p class="text-zinc-400 max-w-md mb-8 leading-relaxed">
      The path you're looking for has been moved, deleted, or never existed.
      Check the URL for typos or head back to safety.
    </p>

    <div class="flex gap-4 font-mono text-sm">
      <a
        href="/"
        class="px-6 py-3 bg-white text-black font-bold rounded hover:bg-zinc-200 transition-colors focus:outline-none focus:ring-2 focus:ring-zinc-400"
      >
        cd ~/home
      </a>
      <button
        onclick="history.back()"
        class="px-6 py-3 border border-zinc-700 text-zinc-300 font-bold rounded hover:border-white hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-white"
      >
        cd ..
      </button>
    </div>

    <div class="mt-12 p-4 bg-zinc-900/40 border border-zinc-800 rounded-lg font-mono text-xs text-zinc-500 max-w-lg">
      <div class="flex items-start gap-2">
        <span class="text-red-400">[ERROR]</span>
        <div class="flex-1">
          <div class="mb-1">Request failed with status code 404</div>
          <div class="text-zinc-600">at Router.match (/handler:L42)</div>
          <div class="text-zinc-600">at CloudflarePages.serve (/edge:L89)</div>
        </div>
      </div>
    </div>
  </div>
</TerminalLayout>
